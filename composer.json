{
    "name": "rtfirst/llms-txt",
    "type": "typo3-cms-extension",
    "description": "LLMs.txt Generator - Generates llms.txt files for AI/LLM crawlers with website content in Markdown format, with optional API key protection.",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/rtfirst/llms-txt",
    "support": {
        "issues": "https://github.com/rtfirst/llms-txt/issues",
        "source": "https://github.com/rtfirst/llms-txt",
        "docs": "https://docs.typo3.org/p/rtfirst/llms-txt/main/en-us/"
    },
    "keywords": [
        "TYPO3",
        "extension",
        "llms.txt",
        "AI",
        "LLM",
        "markdown"
    ],
    "authors": [
        {
            "name": "Roland Tfirst",
            "email": "roland@tfirst.de"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "typo3/cms-core": "^13.0 || ^14.0",
        "typo3/cms-frontend": "^13.0 || ^14.0",
        "league/html-to-markdown": "^5.1"
    },
    "require-dev": {
        "typo3/testing-framework": "^8.0 || ^9.0",
        "phpstan/phpstan": "^2.1",
        "saschaegerer/phpstan-typo3": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "RTfirst\\LlmsTxt\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RTfirst\\LlmsTxt\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "llms_txt"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    }
}
