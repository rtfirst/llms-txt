{
    "name": "rtfirst/llms-txt",
    "type": "typo3-cms-extension",
    "description": "Generates llms.txt files for AI/LLM crawlers with website content in Markdown format",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "TYPO3",
        "extension",
        "llms.txt",
        "AI",
        "LLM",
        "markdown"
    ],
    "authors": [
        {
            "name": "Roland Tfirst",
            "email": "roland@tfirst.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^13.0 || ^14.0",
        "typo3/cms-frontend": "^13.0 || ^14.0",
        "league/html-to-markdown": "^5.1"
    },
    "require-dev": {
        "typo3/testing-framework": "^8.0 || ^9.0",
        "phpstan/phpstan": "^1.10",
        "saschaegerer/phpstan-typo3": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "RTfirst\\LlmsTxt\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RTfirst\\LlmsTxt\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "llms_txt"
        }
    }
}
